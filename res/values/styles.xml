<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/theme.textColor</item>
        <!-- item name="android:alertDialogStyle">@style/AlertDialog</item -->
    </style>

    <style name="AlertDialog">
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@color/theme.dialogHead</item>
        <item name="android:topDark">@color/theme.dialogHead</item>
        <item name="android:centerBright">@color/theme.dialogBody</item>
        <item name="android:centerDark">@color/theme.dialogBody</item>
        <item name="android:centerMedium">@color/theme.dialogBody</item>
        <item name="android:bottomBright">@color/theme.dialogFooter</item>
        <item name="android:bottomDark">@color/theme.dialogFooter</item>
        <item name="android:bottomMedium">@color/theme.dialogFooter</item>
    </style>

</resources>